<div class="carousel-arrows separated-arrows {{ class|esc_attr }}">

    {% set icon = icon|default('angle') %}
    {% set btn_class = btn_class|default('') ~ ' bg-gray-100 icon-hover-white bg-hover-primary d-flex' %}
    {% set icon_attrs = {class: 'svg-icon icon-md m-auto icon-dark'} %}

    <a class="carousel-arrow prev {{ btn_class }} {{ prev_class }}">
        {{ get_icon('fasm/6/set/' ~ icon ~ '-right', icon_attrs)|raw }}
    </a>

    <a class="carousel-arrow next {{ btn_class }} {{ next_class }}">
        {{ get_icon('fasm/6/set/' ~ icon ~ '-left', icon_attrs)|raw }}
    </a>

</div>
