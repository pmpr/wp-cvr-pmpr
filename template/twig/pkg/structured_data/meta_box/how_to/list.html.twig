{% if items is defined and items is not empty %}
    <div class="col-12 col-md-6{% if not is_last %} mb-3 mb-md-0{% endif %}">
        <h3 class="h5">{{ title|raw }}</h3>
        <ul class="list-group list-group-flush">
            {% for item in items %}
                <li class="list-group-item border-0 px-0 py-2 d-flex li-icon svg-icon icon-before-3xs icon-before-primary icon-{{ icon|esc_attr }}">
                    <span class="mr-3">{{ item.name|raw }}</span>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
