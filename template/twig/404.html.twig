{% set has_header = 0 %}
{% set has_footer = 0 %}
{% extends get_template('base', _self) %}
{% block body %}
    <main class="section-border border-primary">
        <div class="container d-flex flex-column min-vh-100">
            <div class="row align-items-center d-flex justify-content-center flex-column" style="min-height:100vh;">
                <div class="col-12 col-md-8 col-lg-6 position-relative" style="min-height: 18rem">
                    <h1 class="text-gray-400 position-absolute left-0 top-0"
                        style="font-size: 15rem; z-index: 0">{{ __('404', domain) }}</h1>
                    <span class="font-20 text-right">{{ not_found_message|raw }}</span>
                    <div class="position-absolute bottom-0 z-index-5 w-90">
                        <p class="mb-1 z-index-2">{{ lost_message|raw }}</p>
                        {{ get_search_form() }}
                        <a class="card-link" href="{{ home_url()|esc_attr }}">{{ back_to_home|raw }}</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
