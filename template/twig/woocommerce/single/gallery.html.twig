{% if items is not empty %}
    {% embed get_cover_template('common/carousel/single_column') with {
        carousels: items,
    } %}
        {% block carousel %}
            {% embed get_cover_template('common/media/background') with {
                image_url: wp_get_attachment_image_url(carousel, 'large'),
                container_class: 'carousel-item position-relative bg-no-repeat',
            } %}
                {% block body %}{% endblock %}
            {% endembed %}
        {% endblock %}
    {% endembed %}
{% endif %}

