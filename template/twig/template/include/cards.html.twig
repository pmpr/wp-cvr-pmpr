{% if items is defined and items is not empty %}

    {% include get_template('template_header', _self) %}
    <div class="row my-5">
        {% for item in items %}
            {% set url = render_post_data('url', item) %}
            <div class="{{ prepare_columns(loop, {'': 12, 'md': 2, 'lg': (12 / column|default(4))}, 5) }} d-flex">
                {% embed get_template('card', _self) with {
                    attrs: {}
                } %}
                    {% block before_body %}
                        {% if url is not empty %}
                            <a href="{{ url|esc_attr }}">
                        {% endif %}
                        {{ render_post_data('image', item.id, {
                            class: 'img-fluid h-100 w-100'
                        })|raw }}
                        {% if url is not empty %}
                            </a>
                        {% endif %}
                    {% endblock %}
                    {% block body %}
                        {% if url is not empty %}
                            <a href="{{ url|esc_attr }}">
                        {% endif %}
                        <span class="h6 card-title">
                            {{ render_post_data('title', item)|raw }}
                        </span>
                        {% if url is not empty %}
                            </a>
                        {% endif %}
                        <div class="card-text">
                            {{ render_post_data('desc', item)|raw }}
                        </div>
                    {% endblock %}
                {% endembed %}
            </div>
        {% endfor %}
    </div>
{% endif %}
