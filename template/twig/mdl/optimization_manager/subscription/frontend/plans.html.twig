{% if plans is not empty %}
    <div class="row plans">
        {% set columns = 'col-12 col-lg-6 col-xl-4' %}
        {% for plan in plans %}
            <div class="{{ columns|esc_attr }}{{ margin_bottom(loop, columns, 5)|esc_attr }} d-flex">
                {% include get_template('./plan', _self) with {plan: plan} %}
            </div>
        {% endfor %}
    </div>
{% endif %}

