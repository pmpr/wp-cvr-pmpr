{% if items is defined
    and items is not empty %}

    <div class="card border-0 my-5 bg-transparent" id="faq_accordion">
        <div class="card-header text-center bg-gray-200">
            <h2 class="h4 mb-0">{{ title|raw }}</h2>
        </div>
        <div class="card-body py-2 px-0">
            {% for index, item in items %}
                <div class="card{% if not loop.last %} mb-2{% endif %}">
                    <div class="card-header bg-gray-200" id="faq_question_{{ index|esc_attr }}">
                        <a class="d-flex justify-content-between p-0 btn card-link{% if not loop.first %} collapsed{% endif %}"
                           data-toggle="collapse"
                           data-target="#faq_answer_{{ index|esc_attr }}"
                           aria-expanded="true" aria-controls="faq_answer_{{ index|esc_attr }}">
                            <h3 class="h6 font-17 my-auto text-right">{{ item.question|raw }}</h3>
                            {{ render_icon(icon, {
                                class: 'icon-xs rotate-45deg icon-gray-600 d-none d-md-flex my-auto'
                            }) }}
                        </a>
                    </div>
                    <div id="faq_answer_{{ index|esc_attr }}"
                         class="bg-gray-100 collapse{% if loop.first %} show{% endif %}"
                         aria-labelledby="faq_question_{{ index|esc_attr }}" data-parent="#faq_accordion">
                        <div class="card-body">
                            {{ item.answer|raw }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}

