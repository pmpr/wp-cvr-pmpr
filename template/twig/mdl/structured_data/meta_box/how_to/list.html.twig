{% if items is defined and items is not empty %}
    <div class="col-12 col-md-6{% if not is_last %} mb-3 mb-md-0{% endif %}">
        <h3 class="h5">{{ title|raw }}</h3>
        <ul class="list-group list-group-flush">
            {% for item in items %}
                <li class="list-group-item border-0 px-0 py-2 d-flex">
                    {% if icon is defined and icon is not empty %}
                        {{ render_icon('fasm/6/set/' ~ icon, {class: 'icon-md mr-2 icon-primary'}) }}
                    {% endif %}
                    <span class="mr-3">{{ item.name|raw }}</span>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
